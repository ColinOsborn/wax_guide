<div class="container">
  <%= form_for(@ski_brand) do |f| %>
    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :subtitle %>
          <%= f.text_field :subtitle, class: 'form-control' %>
        </div>
      </div>

      <div class="col-md-6">
        <div class="form-group">
          <%= f.label :body %>
          <%= f.text_area :body, class: 'form-control', rows: 13 %>
        </div>
      </div>
    </div>

    <hr>

      <br>
      <div class="form-group">
        <%= f.submit 'Save Ski Brand', class: 'btn btn-primary btn-block' %>
      </div>
    </div>
  <% end %>
</div>